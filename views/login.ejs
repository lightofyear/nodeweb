<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="123">
    <meta name="author" content="gn">
    <meta name="renderer" content="webkit|ie-stand|ie-comp" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title><%=title%>页面</title>
    <link rel="stylesheet" href="../css/init.css">
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/body/login.css">
</head>
<body>
<body class="text-center">
<% if (no){%>
<div class="alert alert-info myalert" role="alert">
    <%= msg; %>
</div>
<% } %>
<form class="form-signin" action="http://localhost:3004/user/<%= path %>" method="post">
    <img class="mb-4" src="../imgs/static/login/login.svg" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Please <%= show ? 'Sign' : 'Login'; %> in</h1>

    <label for="inputnName" class="sr-only">User name</label>
    <input type="text" name="usn" id="inputnName" class="form-control" placeholder="input Username" required autofocus>

    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name="psw" id="inputPassword" class="form-control" placeholder="input Password" required >
    <% if (show){%>
    <label for="inputPassword" class="sr-only">sure your Password</label>
    <input type="password" class="form-control" placeholder="sure your Password" required>
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" name="eml" id="inputEmail" class="form-control" placeholder="your Email address" required>
    <input type="hidden" name="cryCode" id="crypto"/>
    <div>
        <input type="text" name="code" id="code" class="form-control" placeholder="" disabled style="width: 200px;display: inline-block;" required>
        <button class="getc btn-primary btn-block" type="button" style="width: 80px;display: inline-block;vertical-align: middle">点击获取验证码</button>
    </div>


    <% } if (!show){%>
    <% %>
    <div class="checkbox" >
        <label>
            <input type="checkbox"  class="remember" value="remember-me">Remember me
        </label>
    </div>
    <% } %>
    <%if(!show){%>
    <i class="btn btn-primary btn-block" login="<%= true; %>" >
        login in
    </i>
    <%}%>
    <button class="btn btn-primary btn-block" type="submit" style="<%=!show&&'display: none'%>">Sign in</button>
</form>
<script src="../js/jquery.min.js"></script>
<script src="../js/popper.js"></script>
<script src="../js/bootstrap.min.js"></script>
<script src="../js/logins.js">

</script>

</body>
</body>
</html>